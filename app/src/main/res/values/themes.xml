<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verdeAstlix</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/verdeAstlix</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/verdeAstlix</item>
    </style>
    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="popupMenuBackground">@color/grisAstlix</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/verdeAstlix</item>
        <item name="colorPrimaryDark">@color/verdeAstlix2</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/grisBut</item>
        <item name="android:textColorHint">@color/grisBut2</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <!--item name="android:background">@color/rojoDialogo</item-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
    </style>
</resources>